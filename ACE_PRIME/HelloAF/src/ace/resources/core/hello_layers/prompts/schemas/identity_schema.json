{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "layer_header": {
      "type": "string"
    },
    "primary_sections": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "header_type": {
            "type": "string"
          },
          "header": {
            "type": "string",
            "enum": ["IDENTITY", "PRIMARY DIRECTIVE", "MISSION"]
          },
          "body": {
            "type": "string"
          }
        },
        "required": ["header_type", "header", "body"]
      }
    },
    "optional_sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "header_type": {
            "type": "string"
          },
          "header": {
            "type": "string"
          },
          "body": {
            "type": "string"
          }
        },
        "required": ["header_type", "header", "body"]
      }
    },
    "interaction_sections": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "header_type": {
            "type": "string"
          },
          "header": {
            "type": "string",
            "enum": ["INTERACTION SCHEMA", "INPUTS", "OUTPUTS"]
          },
          "body": {
            "type": "string"
          }
        },
        "required": ["header_type", "header", "body"]
      }
    }
  },
  "required": [
    "layer_header",
    "primary_sections",
    "optional_sections",
    "interaction_sections"
  ]
}
